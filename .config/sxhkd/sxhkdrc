# DPMS
# Turn off display after a short delay
control + alt + shift + p
    powermenu

super + shift + c
    confedit

# Screenshots
super + shift + s
	screenshot

# Color picker to clipboard
alt + shift + c
	xcolor -s && notify-send "Color picked" "<span background='$(xclip -selection clipboard -o)'>	$(xclip -selection clipboard -o)		</span>"

# Open notes file in $EDITOR
super + n
	"$TERMINAL" -e "$EDITOR" ~/notes.md > /dev/null 2>&1

# Open lf
super + control + f
	"$TERMINAL" -e lf

# Open rofi drun
super + d
	rofi -show drun
# Open rofi run
super + r
	rofi -show run
# Open rofi window
super + Tab
	rofi -show window

# Open rofi emoji picker
super + control + e
	rofi -modi emoji -show emoji

# Volume control - dwmblocks
#XF86Audio{Lower,Raise}Volume
#	pamixer --allow-boost -{d,i} 3 && kill -35 $(pidof dwmblocks)
#XF86AudioMute
#	pamixer -t && kill -35 $(pidof dwmblocks)
# Volume control - polybar

XF86Audio{Lower,Raise}Volume
	pamixer --allow-boost -{d,i} 3 && polybar-msg action volume hook 0 > /dev/null
XF86AudioMute
	pamixer -t && polybar-msg action volume-icon hook 0 > /dev/null

# Mic volume control - dwmblocks
#control + {F10,F11}
#	pamixer --source 3 --allow-boost -{d,i} 3 && kill -35 $(pidof dwmblocks)
#control + F9
#	pamixer --source 3 -t && kill -35 $(pidof dwmblocks)

# Mic volume control - polybar
control + {F10,F11}
	pamixer --source 3 --allow-boost -{d,i} 3 && polybar-msg action mic-volume hook 0 > /dev/null
control + F9
	pamixer --source 3 -t && polybar-msg action mic-volume-icon hook 0 > /dev/null
