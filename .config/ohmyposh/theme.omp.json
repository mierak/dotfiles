{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "transient_prompt": {
    "template": "‚ùØ ",
    "background": "transparent",
    "foreground_templates": [
      "{{if gt .Code 0}}red{{end}}",
      "{{if eq .Code 0}}white{{end}}"
    ]
  },
  "console_title_template": "{{.Shell}} :: {{.PWD}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "\u256d\u2500",
          "foreground": "white",
          "type": "text",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " {{.Icon}} ",
          "foreground": "blue",
          "powerline_symbol": "\ue0b0",
          "background": "darkGray",
          "type": "os",
          "style": "diamond"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "<b>{{ .UserName }}</b> ",
          "foreground": "white",
          "powerline_symbol": "\ue0b0",
          "background": "darkGray",
          "type": "shell",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "a",
          "foreground": "transparent",
          "powerline_symbol": "\ue0b0",
          "background": "transparent",
          "type": "text",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none",
            "style": "full"
          },
          "template": " <b>{{ .Path }}</b> ",
          "foreground": "black",
          "powerline_symbol": "\ue0b0",
          "background": "white",
          "type": "path",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "a",
          "foreground": "transparent",
          "powerline_symbol": "\ue0b0",
          "background": "transparent",
          "type": "text",
          "style": "powerline"
        },
        {
          "properties": {
            "branch_icon": "\udb81\ude2c ",
            "cache_duration": "none",
            "commit_icon": "@",
            "fetch_status": true
          },
          "template": " <b>{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}</b> ",
          "foreground": "black",
          "powerline_symbol": "\ue0b0",
          "background": "yellow",
          "type": "git",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "a",
          "foreground": "transparent",
          "powerline_symbol": "\ue0b0",
          "background": "transparent",
          "type": "text",
          "style": "powerline"
        },
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          },
          "template": " <b>{{ .Code }}</b> ",
          "foreground": "black",
          "powerline_symbol": "\ue0b0",
          "background": "green",
          "type": "status",
          "style": "powerline",
          "background_templates": [
            "{{ if .Error }}red{{ end }}"
          ]
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "\u2570\u2500",
          "foreground": "white",
          "type": "text",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "final_space": true
}
